<style>
  .hero-product-page {
    width: 100%;
    position: relative;
    overflow: hidden;
  }
  .hero-product-page__image {
    width: 100%;
    height: 465px;
    object-fit: cover;
    display: block;
  }
  .hero-product-page__placeholder {
    width: 100%;
    height: 465px;
    background-color: #f5f5f5;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    font-size: 16px;
  }
  @media screen and (max-width: 768px) {
    .hero-product-page__image,
    .hero-product-page__placeholder {
      height: 290px;
    }
  }
</style>

<div class="hero-product-page">
  {% if section.settings.image %}
    {%- assign image = section.settings.image -%}
    <img 
      src="{{ image | img_url: '300x' }}"
      srcset="
        {{ image | img_url: '600x' }} 600w,
        {{ image | img_url: '900x' }} 900w,
        {{ image | img_url: '1200x' }} 1200w,
        {{ image | img_url: '1800x' }} 1800w,
        {{ image | img_url: '2400x' }} 2400w
      "
      sizes="100vw"
      alt="{{ image.alt | default: 'Hero image' }}"
      class="hero-product-page__image"
      loading="lazy"
      width="{{ image.width }}"
      height="{{ image.height }}"
    />
  {% else %}
    <div class="hero-product-page__placeholder">
      <p>{{ 'sections.hero_product_page.no_image' | t }}</p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Hero Product Page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero Image",
      "info": "Рекомендується завантажувати зображення в високій роздільності (мінімум 2400px ширина) для найкращої якості"
    }
  ],
  "presets": [
    {
      "name": "Hero Product Page"
    }
  ]
}
{% endschema %}