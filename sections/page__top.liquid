{% schema %}
{
  "name": "Breadcrumbs",
  "settings": [
    {
      "type": "text",
      "id": "home_text",
      "label": "Home Text",
      "default": "בית",
      "info": "Text for home breadcrumb"
    },
    {
      "type": "text",
      "id": "search_text",
      "label": "Search Results Text",
      "default": "תוצאות חיפוש",
      "info": "Text for search results breadcrumb"
    }
  ],
  "presets": [
    {
      "name": "Breadcrumbs"
    }
  ]
}
