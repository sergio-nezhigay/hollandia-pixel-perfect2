
<style>
  .breadcrumb-section {
    height: 41px;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
  
  .breadcrumb-container {
    display: flex;
    align-items: center;
    gap: 12px;
    padding-right: 40px;
  }
  
  .breadcrumb-item {
    font-size: 14px;
    text-decoration: none;
    transition: color 0.2s ease;
  }
  
  .breadcrumb-item.previous {
    color: #89898C;
    font-wright: 500;
  }
  
  .breadcrumb-item.current {
    color: #1A1A1B;
    font-weight: 500;
  }
  
  .breadcrumb-separator {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .breadcrumb-item.previous:hover {
    color: #6a6a6e;
  }
  
 @media (max-width: 767px) {
.breadcrumb-section {
  height: 31px;
}
   
.breadcrumb-item {
  font-size: 12px;
}
   
.breadcrumb-container {
     padding-right: 12px;
   }
  
}

</style>

