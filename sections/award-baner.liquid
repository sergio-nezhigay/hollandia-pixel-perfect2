{% assign has_content = false %}

{% if section.settings.title != blank %}
  {% assign has_content = true %}
{% endif %}

{% if section.settings.text != blank %}
  {% assign has_content = true %}
{% endif %}

{% if section.settings.image %}
  {% assign has_content = true %}
{% endif %}

{% if has_content %}
<style>
  .award-section {
    background-color: #f4efec;
    width: 100%;
    padding: 0;
  }

  .award-container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: flex-start;
    min-height: 415px;
    gap: 75px;
  }

  .award-image {
    flex-shrink: 0;
    width: 535px;
    height: 389px;
    order: 1;
    align-self: end;
  }

  .award-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .award-content {
    flex: 1;
    max-width: 590px;
    padding: 79px 0;
    order: 2;
  }

  .award-title {
    font-size: 36px;
    font-weight: bold;
    margin: 0 0 20px 0;
    line-height: 1.2;
    color: #000;
  }

  .award-divider {
    width: 200px;
    height: 2px;
    background-color: #dd2d4a;
    margin: 0 0 20px 0;
    border: none;
  }

  .award-text {
    font-size: 16px;
    line-height: 1.5;
    color: #000;
    margin: 0;
  }

  .award-text p {
    margin: 0 0 18px 0;
  }

  .award-text p:last-child {
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .award-section {
      max-height: fit-content;
    }

    .award-container {
      flex-direction: column;
      text-align: center;
      gap: 28px;
      min-height: 534px;
      padding: 30px 16px;
      justify-content: center;
      padding-top: 23px;
    }

    .award-image {
      width: 304px;
      height: 211px;
      order: 1;
      padding-top: 0;
      align-self: center;
    }

    .award-content {
      max-width: 100%;
      order: 2;
      padding: 0;
    }

    .award-title {
      font-size: 26px;
      margin: 0 0 14px 0;
      min-height: 38px;
    }

    .award-divider {
      width: 132px;
      margin: 0 auto 14px auto;
    }

    .award-text {
      font-size: 14px;
    }
  }
</style>

<section class="award-section">
  <div class="award-container">
    {% if section.settings.image %}
      <div class="award-image">
        {{ section.settings.image | image_url: width: 535, height: 389 | image_tag: alt: section.settings.image.alt }}
      </div>
    {% endif %}

    {% if section.settings.title != blank or section.settings.text != blank %}
      <div class="award-content">
        {% if section.settings.title != blank %}
          <h2 class="award-title">{{ section.settings.title }}</h2>
          <div class="award-divider"></div>
        {% endif %}
        {% if section.settings.text != blank %}
          <div class="award-text">
            {{ section.settings.text }}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</section>
{% endif %}

{% schema %}
{
  "name": "Award Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "מיטב מיוחדת לאוהבי עיצוב"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text Content",
      "default": "<p>שנתיים וחצי לאחר המחזות הבכורה וילמס וקהלר Wilms ו Köhler זכו במגורת פרסי עיצוב Red Dot Design Award Good Industrial Design, IF Product Design Award</p><p>בזכות מיון רחוק שמספק לצרכנים ואפשרויות עיצוב החדשות יכולת לאמץ לכל חד שינוי. חנות לעיצוב טוב לכל נושאי טובה יותר לכלכלי. נעימה לצרכנים חדש לי, עכשיו שימוש בחומרים גבוהים עמידים למינו מו סוג. מלאך וחלקי 100%, בזכות שימוש בחומרים עליונים עמידים למינו מו סוג מלאכותיים.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Award Section"
    }
  ]
}
{% endschema %}